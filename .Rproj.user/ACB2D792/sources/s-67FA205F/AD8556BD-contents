
# Conversion formulas for meta analysis -----------------------------------

# r goes from -1 to 1; is the conversion is outside this range, it is wrong!

# Terminology:
# N = sample size
# df = degree of fredom


# pearson's r -------------------------------------------------------------

r = 0.2
N = 30

# conversion
r = r

# Spearman's correlation --------------------------------------------------

rho = 0.2
N = 30

# Consersion
r = rho

# t test ------------------------------------------------------------------

t = 0.51
N = 21

# conversion
r = sqrt((t*t)/(t*t+N-2))

# ANOVA -------------------------------------------------------------------

F  = 3.58
df = 288

# conversion
r = sqrt((F*F)/(F*F+df))

# REGRESSION ANALYSES -----------------------------------------------------
# LM, GLM, GLMM, GAM, GAMM, OLS

####  Converting estimated beta and SE to test statistic (t, Z)
beta = 0.3
SE = 0.2

test = beta/SE

#### Converting 95 % coefficient interval to SE

upper_limit = 0.35
lower_limit = 0.12

CI_95% = 3.92
CI_90% = 3.29
CI_99% = 5.15

#conversion
SE = (upper_limit â€“ lower_limit) / CI_95

#### R^2, R-squared, pseudo-R^2 ---> r

R = 0.7

r = sqrt(R)

#### test statistic (e.g. z, wald-t) ---> r

N = 41
test = 1.96

# conversion
r = test / sqrt(N)

# Wilcoxon test -----------------------------------------------------------

## WILCOXON Z
Z = 2.3
N = 57

r = Z / sqrt(N)

